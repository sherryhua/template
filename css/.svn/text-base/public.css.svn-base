/* =====================================================================
    CSS STYLES FOR Public
   =====================================================================
*/
/* = Base/Reset Styles
----------------------------------------------------------------------------------------------------*/
body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, lengend, button, input, textarea, p, blockquote, th, td {
    margin: 0;
    padding: 0;
}
body{
    color:#ffffff; 
}
body,button, input, select, textarea {
	font: 12px/1.5 tahoma, \5b8b\4f53, arial;
}
h1, h2, h3, h4, h5, h6 {
	font-size: 100%;
	font-weight: normal;
}
p,ul,ol,li{
    list-style:none;
    text-align: left;
}
button, input, select, textarea {
	font-size: 100%;
}
fieldset, img {
	border: 0;
}
sup {
	vertical-align: text-top;
}
sub {
	vertical-align: text-bottom;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
}
caption, th {
	text-align: left;
}
textarea {
	resize: none;
}
input, img {
    vertical-align: middle;
}
/** == ClearFix == **/
.clearfix:after {
    content: "\0020";
    display: block;
    height: 0;
    visibility: hidden;
	clear:both;
}
.clearfix {
	zoom: 1;
}
.clear{
    clear:both;    
}
/** ==ClearFixEnd ==**/
